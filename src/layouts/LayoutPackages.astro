---
import LayoutGlobal from "./LayoutGlobal.astro";
import AsidePackages from "../components/AsidePackages.astro";

interface Props {
    title: string;
    description: string;
}

const {title, description} = Astro.props;
import "../styles/layout-packages.css";
---

<LayoutGlobal title={title} description={description}>
    <section class="section-packages">
        <AsidePackages />
        <section class="main-packages">
            <slot />
        </section>
    </section>
</LayoutGlobal>

